#include <stdio.h>

struct artikl {
  char ime[30];
  int kolicina;
  float cijena;
};

int main(void)
{
  int i,n;
  struct artikl *max;
  struct artikl proizvodi[10];
  //ovdje ide vas kod: definirajte polje struktura,
  //uspisite podatke u strukture, pronadjite najvecu cijenu i
  //dodjelite adresu pokazivacu max
  printf("unesi do 10 artikala: ");
  do{
      scanf("%d", &n);
  } while (n<0 || n>10);
  for(i=0;i<n;i++){
      printf("unesi ime: ");
      scanf(" %[^\n]", proizvodi[i].ime);
      printf("unesi kolicinu: ");
      scanf("%d", &proizvodi[i].kolicina);
      printf("unesi cijenu: ");
      scanf("%f", &proizvodi[i].cijena);
  }
  
  max = &proizvodi[0];
  for(i=1;i<n;i++){
      if(proizvodi[i].cijena > max->cijena){
          max = &proizvodi[i];
      } 
  }


  // ispis ne dirati, mora koristiti pokazivac max
  printf("REZULTATI:\n");
  printf("cijena: %.2f, kolicina: %d", max->cijena, max->kolicina);
  return 0;
}
